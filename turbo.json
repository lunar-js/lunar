{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**", "build/**", "dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "size": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "//#typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {},
    "//#lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {},
    "//#lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "//#format": {},
    "//#format:verify": {}
  }
}
